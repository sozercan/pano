{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Pano",
  "version": "0.1.0",
  "identifier": "io.pano.testgrid",
  "build": {
    "beforeDevCommand": "cd ../.. && bun run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "cd ../.. && bun run build",
    "frontendDist": "../../dist/frontend"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Pano - TestGrid Viewer",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' https://testgrid-api.prow.k8s.io; font-src 'self'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.png"
    ],
    "category": "DeveloperTool",
    "shortDescription": "Modern TestGrid Viewer",
    "longDescription": "Pano is a modern, subscription-based TestGrid viewer with desktop notification support for monitoring CI test results.",
    "macOS": {
      "minimumSystemVersion": "10.15",
      "entitlements": null
    },
    "windows": {
      "wix": null,
      "nsis": {
        "installMode": "currentUser"
      }
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
